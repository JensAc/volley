<table class="ui celled striped table">
    <thead>
    <tr>
        <th>Date</th>
        <th>Team A</th>
        <th>Score</th>
        <th>Team B</th>
        <th>Odds</th>
    </tr>
    </thead>
    <tbody>
    {% for match in matches %}
        <tr>
            <td>{{ match.date.strftime("%d.%m.%Y") }}</td>
            <td>{% for p in match.teams[0] %}{{ p.name }}{{ ',' if not loop.last }} {% endfor %}</td>
            <td>{{ match.score[0] }} - {{ match.score[1] }}</td>
            <td>{% for p in match.teams[1] %}{{ p.name }}{{ ',' if not loop.last }} {% endfor %}</td>
            <td>???</td>
        </tr>
    {% endfor %}
    </tbody>
</table>